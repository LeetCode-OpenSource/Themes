{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@themes/*": ["packages/*/src"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "target": "es5"
  }
}
