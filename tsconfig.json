{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "target": "es5"
  },
  "include": ["**/src", "**/__tests__", "**/*.spec.ts", "**/*.test.ts"],
  "exclude": ["**/dist", "node_modules", "**/node_modules"]
}
